[user]
  name = Leo Cassarani
  email = leo.cassarani@me.com
[alias]
  s = status
  ci = commit
  co = checkout
  gogogo = !git aa && git continue
  continue = rebase --continue
  skip = rebase --skip
  di = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  head = !git l -1
  r = !git l -30
  l = log --graph --abbrev-commit --date=relative
  pom = push origin master
  plom = pull origin master
  plrom = pull --rebase origin master
  pop = stash pop
  b = branch
  standup = log --since yesterday
  unstage = reset HEAD --
[core]
  editor = vim -f
  quotepath = false
  autocrlf = input
  excludesfile = ~/.gitignore_global
[color]
  ui = auto
[format]
  pretty = format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[github]
  user = leocassarani
[merge]
  conflictstyle = diff3
[rerere]
  enabled = true
